extends layout

block content
  fieldset
    legend
      h1 Вход в менеджер паролей

    form(action="/login", method="post")
      p
        input(type="name", name="username" placeholder="Логин" required)
      p
        input(type="password", name="password" placeholder="Пароль" required)
      p
        input(type="submit", value="Войти")

    if messages.length
      hr
      ul
        each message in messages
          li= message
      hr

  p
    a(href="/register") Создать новую учётную запись
